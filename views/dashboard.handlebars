{{!-- views/dashboard.handlebars --}}

<nav>
  <a href="/">Home</a>
  <a href="/dashboard">Dashboard</a>
  <a href="/logout">Logout</a>
</nav>

<h1>Your Dashboard</h1>

<button id="new-post-btn">New Post</button>

{{#each posts}}
  <div class="post">
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <button class="edit-btn" data-id="{{this.id}}">Edit</button>
    <button class="delete-btn" data-id="{{this.id}}">Delete</button>
  </div>
{{/each}}

<div id="new-post-form" style="display: none;">
  <h2>New Post</h2>
  <form id="new-post-form">
    <label for="post-title">Title:</label>
    <input type="text" id="post-title" name="title">
    <label for="post-content">Content:</label>
    <textarea id="post-content" name="content"></textarea>
    <button type="submit">Create Post</button>
  </form>
</div>

<div id="edit-post-form" style="display: none;">
  <h2>Edit Post</h2>
  <form id="edit-post-form">
    <label for="edit-post-title">Title:</label>
    <input type="text" id="edit-post-title" name="title">
    <label for="edit-post-content">Content:</label>
    <textarea id="edit-post-content" name="content"></textarea>
    <button type="submit">Update Post</button>
  </form>
</div>
