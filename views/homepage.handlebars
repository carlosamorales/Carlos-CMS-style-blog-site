{{!-- views/homepage.handlebars --}}

{{#if loggedIn}}
  <nav>
    <a href="/">Home</a>
    <a href="/dashboard">Dashboard</a>
    <a href="/logout">Logout</a>
  </nav>
{{else}}
  <nav>
    <a href="/">Home</a>
    <a href="/login">Login</a>
    <a href="/signup">Sign Up</a>
  </nav>
{{/if}}

<h1>The Tech Blog</h1>

{{#each posts}}
  <div class="post">
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <p>Posted by {{this.user.username}} on {{this.createdAt}}</p>
  </div>
{{/each}}
