{{!-- views/homepage.handlebars --}}

<header>
  <h1>The Tech Blog</h1>
</header>

<nav>
  <a href="/">Home</a>
  {{#if loggedIn}}
    <a href="/dashboard">Dashboard</a>
    <a href="/logout">Logout</a>
  {{else}}
    <a href="/login">Login</a>
    <a href="/signup">Sign Up</a>
  {{/if}}
</nav>

<div class="container">
  {{#each posts}}
    <div class="post">
      <h2>{{this.title}}</h2>
      <p>{{this.content}}</p>
      <p class="post-metadata">Posted by {{this.user.username}} on {{this.createdAt}}</p>
    </div>
  {{/each}}
</div>

<footer>
  <p>&copy; 2024 The Tech Blog</p>
</footer>
